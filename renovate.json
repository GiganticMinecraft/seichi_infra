{
  "extends": [
    "config:recommended"
  ],
  "timezone": "Asia/Tokyo",
  "reviewers": [
    "outductor"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "go"
      ]
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "matchPackageNames": [
        "*"
      ],
      "groupName": "terraform packages",
      "enabled": true,
      "schedule": [
        "at any time"
      ]
    },
    {
      "matchPackageNames": [
        "/^ghcr.io/giganticminecraft/seichi_minecraft_server_production_.+$/"
      ],
      "versioning": "loose"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "argocd": {
    "fileMatch": [
      "^seichi-onp-k8s/manifests/seichi-kubernetes/apps/.+\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "^helm-charts/[^/]+/templates/.+\\.yaml$",
      "^seichi-onp-k8s/manifests/seichi-kubernetes/apps/.+\\.yaml$",
      "^seichi-onp-k8s/manifests/seichi-kubernetes/app-templates/.+\\.yaml$"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.github/workflows/build_mcserver_base_images.yaml$"
      ],
      "matchStrings": [
        "- mcserver_base_image_tag: (?<currentValue>.*)\\n\\s+mcserver_base_image_digest: \\\"(?<currentDigest>sha256:[a-f0-9]+)\\\""
      ],
      "depNameTemplate": "itzg/minecraft-server",
      "extractVersionTemplate": "^(?<version>\\d+\\.\\d+\\.\\d+)-.*",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^seichi-onp-k8s/manifests/seichi-kubernetes/apps/cluster-wide-apps/metrics-server/kustomization.yaml"
      ],
      "matchStrings": [
        "https://github.com/kubernetes-sigs/metrics-server/releases/download/v(?<currentValue>[\\d.]+)/components.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes-sigs/metrics-server",
      "versioningTemplate": "semver"
    }
  ],
  "terraform": {
    "enabled": true,
    "fileMatch": [
      "^terraform/.*\\.tf$"
    ]
  }
}
