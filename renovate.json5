{
  extends: [
    'config:recommended',
  ],
  timezone: 'Asia/Tokyo',
  reviewers: [
    'outductor',
  ],
  ignoreDeps: [
    'docker-registry1.mariadb.com/library/mariadb',
  ],
  packageRules: [
    {
      matchManagers: [
        'gomod',
      ],
      matchPackageNames: [
        'go',
      ],
    },
    {
      matchManagers: [
        'terraform',
      ],
      matchPackageNames: [
        '*',
      ],
      groupName: 'terraform packages',
      enabled: true,
      schedule: [
        'at any time',
      ],
    },
    {
      matchManagers: [
        'dockerfile',
        'kubernetes',
      ],
      matchPackageNames: [
        'ghcr.io/giganticminecraft/seichi_minecraft_server_*',
      ],
      groupName: 'seichi_minecraft_server images',
      enabled: true,
      schedule: [
        'at any time',
      ],
      automerge: true,
      automergeSchedule: [
        '* 0-7 * * *',
        '* 8-23 * * *',
      ],
    },
    {
      matchManagers: [
        'custom.regex',
      ],
      matchPackageNames: [
        'itzg/minecraft-server*',
      ],
      groupName: 'itzg/minecraft-server images',
      schedule: [
        'at any time',
      ],
      automerge: true,
    },
    {
      matchPackageNames: [
        'mariadb-operator',
        'mariadb-operator-crds',
      ],
      groupName: 'mariadb-operator',
    },
  ],
  postUpdateOptions: [
    'gomodTidy',
    'gomodUpdateImportPaths',
  ],
  argocd: {
    managerFilePatterns: [
      '/^seichi-onp-k8s/manifests/seichi-kubernetes/apps/.+\\.yaml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/^helm-charts/[^/]+/templates/.+\\.yaml$/',
      '/^seichi-onp-k8s/manifests/seichi-kubernetes/apps/.+\\.yaml$/',
      '/^seichi-onp-k8s/manifests/seichi-kubernetes/app-templates/.+\\.yaml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^.github/workflows/build_mcserver_base_images.yaml$/',
      ],
      matchStrings: [
        '- mcserver_base_image_tag: (?<currentValue>.*)\\n\\s+mcserver_base_image_digest: \\"(?<currentDigest>sha256:[a-f0-9]+)\\"',
      ],
      depNameTemplate: 'itzg/minecraft-server',
      extractVersionTemplate: '^(?<version>\\d+\\.\\d+\\.\\d+)-.*',
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^seichi-onp-k8s/manifests/seichi-kubernetes/apps/cluster-wide-apps/metrics-server/kustomization.yaml/',
      ],
      matchStrings: [
        'https://github.com/kubernetes-sigs/metrics-server/releases/download/v(?<currentValue>[\\d.]+)/components.yaml',
      ],
      datasourceTemplate: 'github-releases',
      depNameTemplate: 'kubernetes-sigs/metrics-server',
      versioningTemplate: 'semver',
    },
  ],
  terraform: {
    enabled: true,
    managerFilePatterns: [
      '/^terraform/.*\\.tf$/',
    ],
  },
}
